<!-- Put site-specific property overrides in this file. -->

<configuration>
   <property>
      <name>serverless.zookeepers.hosts</name>
      <value>10.241.64.14:2181</value>
   </property>
   <property>
      <name>serverless.task.purgeinterval</name> <!-- How often to attempt to purge things from the cache. -->
      <value>10000</value> <!-- Every ten seconds. -->
   </property>
   <!-- Disable quota for now. It causes errors with subtree protocol. -->
   <property>
      <name>dfs.namenode.quota.enabled</name>
      <value>false</value>
   </property>
   <property>
      <name>dfs.quota.enabled</name>
      <value>false</value>
   </property>
   <property>
      <name>serverless.task.cacheinterval</name> <!-- How long previous results stay cached. -->
      <value>20000</value> <!-- Every twenty seconds. -->
   </property>
   <property>
      <name>serverless.task.timeoutmillis</name>
      <value>35000</value>
   </property>
   <property>
      <name>serverless.tcp.enabled</name>
      <value>true</value>
   </property>
   <property>
      <name>dfs.support.append</name>
      <value>true</value>
   </property>
   <property>
      <name>serverless.http.maxretries</name>
      <value>3</value>
   </property>
   <property>
      <name>storage.ndb.debug.enabled</name>
      <value>false</value>
   </property>
   <!-- Enable POSIX ACLs. They are disabled by default. -->
   <property>
      <name>dfs.namenode.acls.enabled</name>
      <value>true</value>
   </property>
   <property>
      <name>dfs.heartbeat.interval</name>
      <value>5</value>
   </property>
   <property>
